<h1>Productos</h1>
<table class="table">
  <thead>
    <tr>
      <th>TÃ­tulo</th>
      <th>Precio</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
      <tr>
        <td>{{this.title}}</td>
        <td>${{this.price}}</td>
        <td>
          <a href="/products/{{this._id}}" class="btn btn-sm btn-info">Ver</a>
          {{#if ../cartId}}
            <form action="/api/carts/{{../cartId}}/product/{{this._id}}" method="POST" class="d-inline">
              <button type="submit" class="btn btn-sm btn-primary">Agregar</button>
            </form>
          {{/if}}
        </td>
      </tr>
    {{else}}
      <tr>
        <td colspan="3">No hay productos.</td>
      </tr>
    {{/each}}
  </tbody>
</table>