<h1>Carrito</h1>
{{#if cart.products.length}}
  <table class="table">
    <thead>
      <tr>
        <th>Producto</th>
        <th>Cantidad</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      {{#each cart.products}}
        <tr>
          <td>{{this.product.title}}</td>
          <td>{{this.quantity}}</td>
          <td>
            <button class="btn btn-sm btn-danger" onclick="deleteProduct('{{../cart._id}}', '{{this.product._id}}')">Eliminar</button>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
  <form action="/api/carts/{{cart._id}}/purchase" method="POST">
    <button type="submit" class="btn btn-success">Comprar</button>
  </form>
{{else}}
  <p>No hay productos en el carrito.</p>
{{/if}}
<a href="/products" class="btn btn-secondary">Volver</a>

<script>
  async function deleteProduct(cartId, productId) {
    await fetch(`/api/carts/${cartId}/products/${productId}`, { method: 'DELETE' });
    window.location.reload();
  }
</script>